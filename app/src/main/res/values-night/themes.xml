<resources>
    <!-- Base application theme. -->
    <style name="Theme.Robin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/twitter_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>
    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/material_dark</item>
    </style>
    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="cardBackgroundColor">@color/material_dark</item>
    </style>
    <style name="VerticalThemeLayoutInputs">
        <item name="android:background">@color/black</item>
    </style>
</resources>